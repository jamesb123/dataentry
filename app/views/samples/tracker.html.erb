<html>
<%= stylesheet_link_tag "basic" %>

<table width="1024" border="0">
  <tr>
    <td width=900 height="450" bgcolor="#D2DBEC">
	<table width="900" height="450" border="0" align="center" bordercolor="#ABBCD8">
	  <tr>
		<td width="900" height="450" align="center" valign="top" bgcolor="#FFFFFF"><table width="800" height="169" border="0">
          <tr>
            <th scope="col"><p><%= image_tag "banner.jpg", :width => "900", :height => "169" %></p>
              </th>
          </tr>
        </table>

<table width="900" height="395" border="0" align="left" cellspacing="2" cellpadding = "2">
          
<h2>Right Whale Sample Tracker  - Logged in as: <%= current_user.to_s %>
<%= link_to 'Home', menu_path %> </h2>


<% form_for(@sample) do |f| %>
<%= f.error_messages %>

<tr><td width=200><%= f.label :submitted_by %></td><td width = 150><%= f.text_field :submitted_by %></td></tr> 
<tr><td><%= f.label :date_submitted %></td><td><%= f.text_field :date_submitted %></td></tr>  
<tr><td><%= f.label :field_code %></td><td><%= f.text_field :field_code %></td></tr>  
<tr><td><%= f.label :collected_on_day %></td><td><%= f.collection_select(:collected_on_day , Sample::DD, :to_s, :to_s, :include_blank => true) %></td></tr> 
<tr><td><%= f.label :collected_on_month %></td><td><%= f.collection_select(:collected_on_month , Sample::MM, :to_s, :to_s, :include_blank => true) %></td></tr> 
<tr><td><%= f.label :collected_on_year %></td><td><%= f.collection_select(:collected_on_year , Sample::YY, :to_s, :to_s, :include_blank => true) %></td></tr> 
<tr><td><%= f.label :sample_bc %></td><td><%= f.text_field :sample_bc %></td></tr> 
<tr><td><%= f.label :organization_id %></td><td><%= f.collection_select( :organization_id, Organization.find(:all), :id, :org_name, :include_blank => true) %></td></tr> 
<tr><td><%= f.label :field_indent, 'Field Identification' %></td><td><%= f.text_field :field_ident %> 
<tr><td><%= f.label :tissue_type %></td><td><%= f.collection_select( :tissue_type , Sample::TT, :to_s, :to_s, :include_blank => true) %></td></tr> 
<tr><td><%= f.label :current_location %></td><td><%= f.text_field :current_location %></td></tr> 
<tr><td><%= f.label :comments %></td><td><%= f.text_field :comments %></td></tr> 
<tr><td><%= f.label :shipping_date %></td><td><%= f.text_field :shipping_date %></td></tr> 
<tr><td><%= f.label :export_permit %></td><td><%= f.text_field :export_permit %></td></tr> 
<tr><td><%= f.label :import_permit %></td><td><%= f.text_field :import_permit %></td></tr> 
<tr><td><%= f.label :received_by_trent %></td><td><%= f.check_box :received_by_trent %></td></tr> 
<tr><td><%= f.label :profiling_completed %></td><td><%= f.check_box :profiling_completed %></td></tr> 
<tr><td><%= f.label :dna_extracted %></td><td><%= f.check_box :dna_extracted %></td></tr> 
<tr><td><%= f.label :extraction_date %></td><td><%= f.text_field :extraction_date %></td></tr> 
<tr><td><%= f.label :profiling_date %></td><td><%= f.text_field :profiling_date %></td></tr> 

<tr><td><%= f.submit "Update" %>   <%= link_to 'Back', samples_path %></td></tr> 

<% @sample.tissue_type = params[:tissue_type] %>
<% @sample.collected_on_day = params[:collected_on_day] %>
<% @sample.collected_on_month = params[:collected_on_month] %>
<% @sample.collected_on_year = params[:collected_on_year] %>
<% end %>



    
        </table>
