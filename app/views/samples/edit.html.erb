<html>
<%= stylesheet_link_tag "basic" %>
<style type="text/css">
table, td, th
td
{
vertical-align:middle;
}
</style>

<table width="1024" border="0">
  <tr>
    <td width="900" height="450" bgcolor="#D2DBEC">
	<table width="900" height="450" border="0" align="center" bordercolor="#ABBCD8">
	  <tr>
		<td width="900" height="450" align="center" valign="top" bgcolor="#FFFFFF"><table width="900" height="169" border="0">
          <tr>
            <th scope="col"><p><%= image_tag "banner.jpg", :width => "900", :height => "169" %></p>
              </th>
          </tr>
        </table>
          
<table width="904" height="100" align="left" cellspacing="2" cellpadding = "2">
		<tr><th>Name</th><th>Value</th><th>Description</th></tr>

<h2><%= link_to 'Home', menu_path %></h2>
<h2><b><font color=red>EDIT</font></b> Right Whale Sample for <%= current_user.to_s %></h2>

<% form_for(@sample) do |f| %>
	<%= f.error_messages %>

	<tr><td width= "25%" ><%= f.label :shipping_date %></td><td width = "35%" ><%= f.text_field :shipping_date %></td><td width = "40%">The date you shipped the sample if known YY-MM-DD</td></tr> 
	<tr><td><%= f.label :date_submitted %></td><td><%= f.text_field :date_submitted %></td><td>Default is today's date</td></tr>
	<tr><td><%= f.label :field_code %></td><td><%= f.text_field :field_code %></td><td>For biopsy samples this will be the whale letter (e.g.) A. For others, this will be the unique identifier for the relevant event (e.g. necropsy)  </td></tr>
	<tr><td><%= f.label :collected_on_day %></td><td><%= f.collection_select(:collected_on_day , Sample::DD, :to_s, :to_s, :include_blank => true) %></td><td>Choose Day from drop down list 1-31 or blank</tr>
	<tr><td><%= f.label :collected_on_month %></td><td><%= f.collection_select(:collected_on_month , Sample::MM, :to_s, :to_s, :include_blank => true) %></td><td>Choose Month from drop down list 1-12 or blank</td></tr>
	<tr><td><%= f.label :collected_on_year %></td><td><%= f.collection_select(:collected_on_year , Sample::YY, :to_s, :to_s, :include_blank => true) %></td><td>Choose Year from drop down list</td></tr>
	<tr><td><%= f.label :sample_bc %></td><td><%= f.text_field :sample_bc %></td><td>Sample Bar Code if available</td></tr>
	<tr><td><%= f.label :organization_id %></td><td><%= f.collection_select( :organization_id, Organization.find(:all), :id, :org_name, :include_blank => true) %></td><td>The team who collected the sample</td></tr>
	<tr><td><%= f.label :field_indent, 'Field Identification (NEA)'%></td><td><%= f.text_field :field_ident %></td><td>The potential NEA # of the individual sampled</td></tr>
	<tr><td><%= f.label :tissue_type %></td><td><%= f.collection_select( :tissue_type , Sample::TT, :to_s, :to_s, :include_blank => true) %></td><td>Choose Tissue type from drop down list</td></tr>
	<tr><td><%= f.label :shipping_date %></td><td><%= f.text_field :shipping_date %></td><td>The date you shipped the sample if known - Can be filled in later</td></tr>
	<tr><td><%= f.label :export_permit %></td><td><%= f.text_field :export_permit %></td><td>Import Permit</td></tr> 
	<tr><td><%= f.label :import_permit %></td><td><%= f.text_field :import_permit %></td><td>Export Permit</td></tr> 
	<tr><td><%= f.label :sample_bc, 'Sample Bar Code' %></td><td><%= f.text_field :sample_bc %></td><td>Sample Bar Code if available</td></tr>
	<tr><td><%= f.label :field_indent, 'Field Identification (NEA)'%></td><td><%= f.text_field :field_ident %></td><td>The potential NEA # of the individual sampled</td></tr>
	<tr><td><%= f.label :current_location %></td><td><%= f.text_field :current_location %></td><td>The current location of the sample</td></tr>
	<tr><td><%= f.label :comments %></td><td><%= f.text_field :comments %></td><td>Any other comments relevant to this sample</td></tr>

	<tr><td><%= f.submit "Update" %></td></tr> 

<% end %>

        </tr>
        </table>
  </tr>
</table>

